@model CategoryManageViewModel

<div class="validation" asp-validation-summary="ModelOnly"></div>

<div class="row mt-1 mb-5">
    <div class="col-lg-9">
        <h2>@Model.modelName</h2>
    </div>
    <div class="col-lg-3">
        <a class="btn btn-success float-right" asp-controller="CategoryManage" asp-action="Insert">@Model.btnName</a>
    </div>
</div>

<div class="row mb-5">
    @{
        foreach (var obj in Model.categories)
        {
            <div class="col-lg-9 p-2 border-bottom">
                <a class="text-dark" asp-controller="CategoryManage" asp-action="Edit" asp-route-id="@obj.id">
                    <h6>@obj.name</h6>
                </a>
            </div>
            <div class="col-lg-3 p-2 border-bottom">
                <div class="float-right">
                    <a class="btn btn-danger" asp-controller="CategoryManage" asp-action="Delete" asp-route-id="@obj.id">Удалить</a>
                </div>
            </div>
        }
    }
</div>