@model AuthViewModel

<div class="row mt-1 mb-5">
    <h2>@Model.modelName</h2>
</div>

<div class="row mb-5">
    <form asp-action="Login" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="user.name"></label>
            <div class="col-12">
                <input asp-for="user.name" class="form-control" />
                <span asp-validation-for="user.name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="user.password"></label>
            <div class="col-12">
                <input asp-for="user.password" class="form-control" />
                <span asp-validation-for="user.password" class="text-danger"></span>
            </div>
        </div>

        <input class="btn btn-success" type="submit" value="@Model.btnName" />
    </form>
</div>