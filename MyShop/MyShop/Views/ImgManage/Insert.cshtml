@model ImgManageViewModel

<div class="row mt-1 mb-5">
    <div class="col-12">
        <h2>@Model.modelName</h2>
    </div>
</div>

<div class="validation" asp-validation-summary="ModelOnly"></div>

<div class="row mb-5">
    <form asp-action="Insert" method="post" class="form-horizontal" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="img.name"></label>
            <div class="col-12">
                <input asp-for="img.name" class="form-control" />
                <span asp-validation-for="img.name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="formFile"></label>
            <div class="col-12">
                <input type="file" asp-for="formFile" multiple>
                <span asp-validation-for="formFile" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="@Model.btnName" />
    </form>
</div>